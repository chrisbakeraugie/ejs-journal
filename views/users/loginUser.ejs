<div  id="login-container" style="background-image: url(/img/home-background-<%=Math.floor(Math.random() * 4)%>.jpg)">
  <div class="row h-100 frosted-background" id="login-form">
    <div class="col-sm-12 my-auto d-flex justify-content-center">
      <div class="d-flex flex-column">
        <h2 class="align-self-center">Welcome to Project Journal</h2>
        <p class="align-self-center">Use it to record progress on learning new skill.</p>
        <p class="align-self-center">A Node.js application using Express, Mongoose, MongoDB, and Embedded Javascript
          (EJS)</p>
      </div>
    </div>
    <div class="col-sm-12 my-auto d-flex justify-content-center">
      <form class="d-flex flex-column" action="/users/login" method="POST">
        <h2 class="align-self-center">Login:</h2>
        <br />
        <input type="text" name="email" id="email" placeholder="Email" required>
        <br />
        <input type="password" name="password" id="password" placeholder="Password" required>
        <br />
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>
    <div class="col-sm-12 my-auto d-flex justify-content-center">
      <a href="/users/new-user" style="color: var(--bs-gray); text-decoration: none;">Haven't logged in before?</a>
    </div>
  </div>
</div>