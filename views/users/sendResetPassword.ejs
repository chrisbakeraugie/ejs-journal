<div class="row h-100 home-container"
  style="background-image: url(/img/home-background-<%=Math.floor(Math.random() * 4)%>.jpg)">
  <div class="col-sm-12 my-auto d-flex justify-content-center">
    <div class="d-flex flex-column frosted-background">
      <h2 class="align-self-center" id="login-title">Reset Password</h2>
      <p>This will reset your password and contact you by email. <strong>Please change your password after login!</strong></p>
      <form class="d-flex flex-column" id="forgot-password-form" action="/users/forgot-password" method="POST">
        <input type="text" name="email" id="email" placeholder="Email" required>
        <br />
        <button class="btn btn-primary" type="submit">Send me an email</button>
      </form>
    </div>
  </div>